<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#607D8B"
    tools:context="com.example.administratr.application.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn Kana"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:id="@+id/textView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/hiragana_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Hiragana"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="10dp"
            android:background="#448AFF"
            android:textColor="#212121"
            android:onClick="hiraganaButtonClick"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/kana_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Kana"
            android:textSize="25sp"
            android:background="#03A9F4"
            android:fontFamily="sans-serif"
            android:textColor="#212121"
            android:onClick="kanaButtonClick"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/katakana_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Katakana"
            android:textSize="25sp"
            android:fontFamily="sans-serif"
            android:background="#448AFF"
            android:textColor="#212121"
            android:onClick="katakanaButtonClick"
            android:textAllCaps="false"/>


    </LinearLayout>

    <Button
        android:text="+"
        android:textSize="50sp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="37dp"
        android:id="@+id/more_words_button"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:onClick="moreWords"/>

    <TextView
        android:text="10"
        android:textSize="30sp"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:id="@+id/amount_of_words_view"
        android:layout_alignBaseline="@+id/more_words_button"
        android:layout_alignBottom="@+id/more_words_button"
        android:layout_toLeftOf="@+id/more_words_button"
        android:layout_toStartOf="@+id/more_words_button" />

    <Button
        android:text="-"
        android:textSize="50sp"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/less_words_button"
        android:layout_alignBaseline="@+id/amount_of_words_view"
        android:layout_alignBottom="@+id/amount_of_words_view"
        android:layout_toLeftOf="@+id/amount_of_words_view"
        android:layout_toStartOf="@+id/amount_of_words_view"
        android:onClick="lessWords"/>


</RelativeLayout>
